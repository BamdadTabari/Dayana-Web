@page "/p-p-edit/{Id}"

<MudStack Justify="Justify.Center" Class="mt-3">
    <MudContainer MaxWidth="MaxWidth.ExtraLarge">
        <MudPaper Outlined="true">
            <MudForm>
                <MudSelect T="long" @bind-Value="categorySelectedValue" Label="please choose the category">
                    @{
                        foreach (var pcd in categoryList)
                        {
                            <MudSelectItem T="long" Value="pcd.Id">@pcd.Name</MudSelectItem>
                        }
                    }
                </MudSelect>
                <MudTextField T="string" Label="Post Name" Required="true" RequiredError="pn is required!" @bind-Value="model.Name"/>
                <MudTextField T="string" Label="Post Auth" Required="true" RequiredError="pn is required!" @bind-Value="model.Author"/>
                <MudTextField T="string" Label="Post Description" Required="true" RequiredError="pn is required!" @bind-Value="model.Description" Lines="5"/>
                <MudTextField T="string" Label="Post Content" Required="true" RequiredError="pn is required!" @bind-Value="model.Content" Lines="10"/>
            </MudForm>
            <MudButton @onclick="OnEdit" Variant="Variant.Filled" Color="Color.Success">
                Edit post
            </MudButton>
        </MudPaper>
    </MudContainer>
</MudStack>