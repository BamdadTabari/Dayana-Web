<MudStack Justify="Justify.Center" Class="mt-3">
    <MudContainer MaxWidth="MaxWidth.ExtraLarge">
        <MudPaper Outlined="true">
            <MudForm Class="m-5">
                <MudForm Class="m-5">
                    <MudTextField T="string" Label="Post Comment Text" Required="true" RequiredError="pcn is required!"
                                  @bind-Value="model.CommentText" />
                </MudForm>
                <MudButton @onclick="Add" Variant="Variant.Filled" Color="Color.Success" Class="m-5">
                    Add New Post Comment
                </MudButton>
            </MudForm>
        </MudPaper>
    </MudContainer>
</MudStack>