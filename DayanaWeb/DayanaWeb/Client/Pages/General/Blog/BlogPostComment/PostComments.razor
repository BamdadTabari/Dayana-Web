
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="m-2">
    <MudPaper Outlined="true">
        <MudGrid Spacing="2" Justify="Justify.Center">
            @{
                foreach (var commnet in model)
                {
                    <MudItem lg="12" xl="12" md="12" sm="12" xs="12" Class="m-2 border-2 border-primary rounded">
                        <MudStack Row>
                            <MudText Class="m-2" Typo="Typo.h5">@commnet.CommentText</MudText>
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="(()=>Delete(commnet.Id))" />
                        </MudStack>
                    </MudItem>
                }
            }
        </MudGrid>
    </MudPaper>
</MudContainer>

<MudPagination Color="Color.Primary" Count="_totalPagesCount" SelectedChanged="OnPageChange" BoundaryCount="2" MiddleCount="3" />